<div class="modal fade" id="modalEditChampPossible" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header modal-header-primary">
        Edition d'un champ possible
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h4 class="text-primary text-center">
          {{ champPossible.libelle }}
        </h4>

        <div class="form-group">
          <label for="libelle">Libellé</label>
          <input type="text" id="libelle" value="{{ champPossible.libelle }}" class="form-control">
        </div>

        <div class="form-group">
          <label for="table">Table</label>
          <input type="text" id="table" value="{{ champPossible.table }}" class="form-control">
        </div>

        <div class="form-group">
          <label for="data">Data</label>
          <input type="text" id="data" value="{{ champPossible.data }}" class="form-control" disabled>
          <small><i class="fa fa-info-circle fa-fw"></i>Information non modifiable</small>
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          <input type="text" id="type" value="{{ champPossible.type }}" class="form-control">
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="obligatoire" {% if champPossible.obligatoire %}checked{% endif %}>
          <label class="form-check-label" for="obligatoire">Obligatoire</label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="nullable" {% if champPossible.nullable %}checked{% endif %}>
          <label class="form-check-label" for="nullable">Nullable</label>
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="integration-local" {% if champPossible.integrationLocal %}checked{% endif %}>
          <label class="form-check-label" for="integration-local">Intégration locale</label>
        </div>

        <div class="text-center">
          <button id="btn-save-champ-possible" class="btn btn-primary btn-raised">
            <i class="fa fa-save fa-fw"></i>Enregistrer
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $("#btn-save-champ-possible").click(function(){
    let champId = {{ champPossible.id }};
    let libelle = $("#libelle").val();
    let table = $("#table").val();
    let type = $("#type").val();
    let obligatoire = $("#obligatoire").prop('checked');
    let nullable = $("#nullable").prop('checked');
    let integrationLocal = $("#integration-local").prop('checked');

    let data = {champ_id: champId, libelle: libelle, table: table, type: type, obligatoire: obligatoire, nullable: nullable, integrationLocal: integrationLocal};
    $.ajax({
      url: "{{ path('check_format_mapping_champs_possibles_save') }}",
      type: 'POST',
      data: data,
      success: function(){
        // Close modal
        $('#modalEditChampPossible').modal('hide');
        $('.modal-backdrop').hide();
        let row = $('.champ-row[data-champ-id="'+champId+'"]');
        row.find('.champ-libelle').html(libelle);
        row.find('.champ-table').html(table);
        row.find('.champ-type').html(type);
        let yesHtml = '<span class="text-success"><i class="fa fa-check-circle fa-fw"></i> Oui</span>';
        let noHtml = '<span class="text-danger"><i class="fa fa-times-circle fa-fw"></i> Non</span>';
        if (obligatoire){
          row.find('.champ-obligatoire').html(yesHtml);
        } else {
          row.find('.champ-obligatoire').html(noHtml);
        }
        if (nullable){
          row.find('.champ-nullable').html(yesHtml);
        } else {
          row.find('.champ-nullable').html(noHtml);
        }
        if (integrationLocal){
          row.find('.champ-integration-local').html(yesHtml);
        } else {
          row.find('.champ-integration-local').html(noHtml);
        }
      },
      error: function(){
        alert("Une erreur est survenue :(");
      }
    });
  });
</script>